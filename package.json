{
  "name": "root",
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "husky": "^6.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  },
  "scripts": {
    "clean": "lerna clean --yes",
    "bootstrap": "npm ci && lerna bootstrap --hoist",
    "format": "prettier --write 'packages/*/!(node_modules)/**/*.{js,jsx,ts,tsx}'",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,css,scss,ts,tsx,md}": [
      "prettier --write"
    ]
  }
}
