{
  "name": "root",
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.25.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^6.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "clean": "lerna clean --yes",
    "bootstrap": "npm ci && lerna bootstrap --hoist",
    "format": "prettier --write 'packages/*/!(node_modules)/**/*.{js,jsx,ts,tsx}'",
    "lint": "eslint 'packages/*/!(node_modules)/**/*.{js,jsx,ts,tsx}'",
    "cm": "cz"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json,css,scss,ts,tsx,md}": [
      "npm run format"
    ],
    "packages/*/!(node_modules)/**/*.{js,jsx,ts,tsx}": [
      "npm run lint"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
